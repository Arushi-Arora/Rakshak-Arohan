<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aarushi.crime_mappingapp.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">


    <Button
        android:id="@+id/btn_reportFiling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="74dp"
        android:text="REPORT FILING" />

    <Button
        android:id="@+id/btn_safestRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_reportFiling"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:text="SAFEST ROUTE" />

    <Button
        android:id="@+id/btn_crimeNeighbourhood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:text="NEIGHBOURHOOD CRIME"
        android:layout_below="@+id/btn_reportFiling"
        android:layout_toLeftOf="@+id/btn_trackCrime"
        android:layout_toStartOf="@+id/btn_trackCrime"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/btn_trackCrime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_safestRoute"
        android:layout_alignStart="@+id/btn_safestRoute"
        android:layout_alignTop="@+id/btn_crimeNeighbourhood"
        android:text="TRACK CRIME" />


</RelativeLayout>
